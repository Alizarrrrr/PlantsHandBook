<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutInput"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    android:background="@color/black"
    tools:context=".fragments.InputFragment">

    <Button
        android:id="@+id/btnImgPick"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#535353"
        android:text="Image Pick"
        app:layout_constraintBottom_toTopOf="@+id/btnEndPick"
        app:layout_constraintStart_toStartOf="@+id/btnEndPick" />

    <Button
        android:id="@+id/btnImgCamera"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#535353"
        android:text="Camera"
        app:layout_constraintBottom_toTopOf="@+id/btnEndPick"
        app:layout_constraintEnd_toEndOf="@+id/btnEndPick" />
    <ImageView
        android:id="@+id/imView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginBottom="110dp"
        app:layout_constraintBottom_toTopOf="@+id/btnImgPick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/btnEndPick"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="#535353"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>