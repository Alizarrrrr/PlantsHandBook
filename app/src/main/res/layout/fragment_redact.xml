<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="parent"
    tools:context=".fragments.CameraFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcView"
        layout_constraintEnd_toStartOf="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"

        android:background="@color/black"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="3"
        tools:listitem="@layout/plant_item" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <!--<Button
            android:id="@+id/btnAddPlant"
            android:layout_width="match_parent"

            android:layout_height="0dp"
            android:layout_weight="1"
            android:backgroundTint="#535353"
            android:text="ADD PLANT"
            android:visibility="invisible"
            tools:layout_editor_absoluteY="631dp" />-->


        <Button
            android:id="@+id/btnAddImgGallery"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:text="Gallery"
            app:layout_constraintBottom_toTopOf="@+id/btnUnlockDel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAddImgCamera"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:text="Camera"
            app:layout_constraintBottom_toTopOf="@+id/btnExit"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnUnlockDel"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:text="UnlockDel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            android:text="Exit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>